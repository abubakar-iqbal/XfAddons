### XenForo 2.x .gitignore ###

# Ignore everything
/*

# Do not ignore the following directory
!/src/addons/

# Ignore sensitive config files
/src/config.php
/src/internal_data/config.php

# Ignore internal data and cache directories
/internal_data/
/data/

# Ignore logs
/logs/

# Ignore compiled templates and asset cache
/src/cache/
/js/internal-data/

# Ignore backups
/backups/

# Ignore third-party libraries (if managed outside Git)
/vendor/

# Ignore temporary files
*.tmp
*.log
*.swp
*.bak
.DS_Store
Thumbs.db

# Ignore IDE/project files
.idea/
.vscode/
*.sublime-project
*.sublime-workspace

# Ignore node modules (if using frontend build tools)
/node_modules/

# Ignore environment files
.env
.env.*

# Ignore package lock files (optional based on team preference)
package-lock.json
yarn.lock
